<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EZPark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="dialogCornerRadius">@color/dialogBackgroundColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Elevation overlay -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/colorOverlay</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.EZPark</item>
    </style>

    <!-- Custom style for the rounded outlined TextInputLayout -->
    <style name="CustomOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@drawable/custom_box_stroke</item>
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="cursorColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>

    <!-- Custom style for the TextInputEditText -->
    <style name="CustomTextInputEditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item> <!-- Transparent background -->
    </style>


    <style name="CardView.RoundedBottomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_16sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_16sdp</item>
    </style>

</resources>